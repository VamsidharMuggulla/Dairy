<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uidsample4"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:logo="@drawable/ic_launcher"
                android:theme="@android:style/Theme.Holo.Light.NoActionBar" >
        <activity
            android:name=".MainActivity"
            android:label="Asistencia" >
        </activity>
        <activity android:name=".CollegeRegister" >
        </activity>
        <activity
            android:name=".RegisterCollegeCode"
            android:label="@string/title_activity_register_college_code" >
        </activity>
        <activity
            android:name=".CollegeRegistrationReview"
            android:label="@string/title_activity_college_registration_review"
            android:parentActivityName=".CollegeRegister" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.uidsample4.CollegeRegister" />
        </activity>
        <activity
            android:name=".SplashScreen"
            android:label="Asistencia" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Registered"
            android:label="@string/title_activity_registered" >
        </activity>
        <activity
            android:name=".UserRegistrationReview"
            android:label="@string/title_activity_user_registration_review" >
        </activity>
        <activity
            android:name=".UserRegisterReview"
            android:label="@string/title_activity_user_register_review" >
        </activity>
    </application>

</manifest>
